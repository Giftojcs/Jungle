<%= form_tag login_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= email_field_tag 'session[email]' %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag 'session[password]' %>
  </div>

  <div class="actions">
    <%= submit_tag 'Login' %>
  </div>
<% end %>

